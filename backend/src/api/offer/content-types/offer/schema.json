{
  "kind": "collectionType",
  "collectionName": "offers",
  "info": {
    "singularName": "offer",
    "pluralName": "offers",
    "displayName": "Offer"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "offer_id": {
      "type": "uid",
      "required": true
    },
    "title": {
      "type": "string"
    },
    "requests": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comic.comic",
      "mappedBy": "offer"
    },
    "trade_offers": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comic.comic",
      "inversedBy": "trade_offers"
    },
    "payment_offer": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comic.comic",
      "mappedBy": "pmt_offer"
    },
    "user_requesting": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "offer_requester"
    },
    "user_responding": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "responding_user"
    },
    "response": {
      "type": "enumeration",
      "enum": [
        "waiting on response",
        "accepted",
        "negotiating",
        "denied"
      ],
      "default": "waiting on response"
    },
    "deal": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::deal.deal",
      "inversedBy": "offer"
    }
  }
}
